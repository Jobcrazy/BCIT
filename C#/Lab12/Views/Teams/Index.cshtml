@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@model IEnumerable<Code1st_.Models.Team>

@{
    ViewData["Title"] = @ViewData["Teams"];
}

<h1>@ViewData["Teams"]</h1>

<p>
    <a asp-action="Create">@ViewData["Create New"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TeamName">@ViewData["Edit"]</a> |
                    <a asp-action="Details" asp-route-id="@item.TeamName">@ViewData["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.TeamName">@ViewData["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
